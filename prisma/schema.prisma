generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// Auth Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          String    @default("admin")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// API Keys (verschl체sselt gespeichert)
model ApiKey {
  id          String   @id @default(cuid())
  name        String   // z.B. "OpenAI", "Anthropic"
  service     String   // openai, anthropic, brave, etc.
  keyEncrypted String  // AES-256 verschl체sselt
  isActive    Boolean  @default(true)
  lastUsed    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Agent Status
model Agent {
  id          String   @id @default(cuid())
  agentId     String   @unique // boss, scout, builder, etc.
  name        String
  model       String
  status      String   @default("ready") // ready, active, idle, error
  currentTask String?
  lastActive  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]
  activities  Activity[]
}

// Tasks / Aufgaben
model Task {
  id          String   @id @default(cuid())
  taskId      String   @unique // T-2026-001
  agentId     String
  agent       Agent    @relation(fields: [agentId], references: [agentId])
  title       String
  description String?
  status      String   @default("pending") // pending, active, done, failed
  priority    String   @default("normal") // low, normal, high
  result      String?
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Activity Feed
model Activity {
  id          String   @id @default(cuid())
  agentId     String
  agent       Agent    @relation(fields: [agentId], references: [agentId])
  action      String   // started_task, completed_task, error, etc.
  description String
  metadata    String?  // JSON string f체r extra Daten
  createdAt   DateTime @default(now())
}

// Lead Pipeline
enum LeadStatus {
  NEW
  DEMO_READY
  EMAIL_DRAFT
  APPROVED
  SENT
}

model Lead {
  id            String        @id @default(cuid())
  leadId        String        @unique // L-2026-001
  firma         String
  name          String?       // Kontaktperson
  branche       String?
  adresse       String?
  telefon       String?
  email         String?
  website       String?
  websiteUrl    String?       // Bestehende Website des Kunden
  websiteScore  Int?
  googleRating  String?
  description   String?       // Firmenbeschreibung / Zusammenfassung
  leadSource    String?       // Quelle des Leads (Google Maps, Facebook, Instagram, Gelbe Seiten, Empfehlung)
  leadSourceUrl String?       // URL zur Quelle (Facebook-Profil, Instagram, Google Maps Eintrag)
  status        LeadStatus    @default(NEW)
  demoUrl       String?
  emailSubject  String?
  emailBody     String?       @db.Text
  priority      String        @default("normal")
  notes         String?
  sentAt        DateTime?     // Versandzeitpunkt der Email
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  messages      LeadMessage[] // Email-Verlauf
}

// Email-Verlauf (Chat-History)
model LeadMessage {
  id        String    @id @default(cuid())
  leadId    String
  lead      Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)
  direction String    // "inbound" oder "outbound"
  from      String    // Absender Email
  to        String    // Empf채nger Email
  subject   String?
  body      String    @db.Text
  status    String    @default("draft") // "draft", "approved", "sent"
  createdAt DateTime  @default(now())
  sentAt    DateTime?
}

// Email Log
model EmailLog {
  id          String   @id @default(cuid())
  leadId      String?
  direction   String   // in, out
  recipient   String
  subject     String?
  status      String   // sent, delivered, opened, replied
  createdAt   DateTime @default(now())
}

// Settings
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}
